// 网站描述文字的字体颜色和到边缘的距离
.site-description {
    color: #696969;
    margin-top: 15px;
}

// 网站状态描述项目的名字颜色
// 例如：分类 标签
.site-state-item-name {
  color: #2e405b;
}

// 活跃的菜单项目标志的颜色
.main-menu .menu-item-active::after {
  background: #008086;
}

.menu-item {
    a {
        &:hover, &.menu-item-active {
          background: #F0FFFF;
        }
    }
}

// 回到顶部按钮的边缘弯曲程度(圆角）
.back-to-top {
    border-radius: 0.3rem;
}

.site-brand-container, .sidebar-inner, .comments, .sidebar, .header-inner{
    background: unset;
    box-shadow: unset;
}

// 修改网站头部颜色
.headband {
    height: 3px;
    background: transparent;
}

.site-meta {
    padding: 20px 0;
    color: #2e405b;
    background: transparent;
}
// 站点名背景
.brand{
    background-color: rgba(0, 0, 0, 0);
    margin-top: 18px;
    padding: 0px;
}
// 站点名字体
.site-title {
    font-size: 32px;
    color: #2e405b;
    line-height: 80px;
    letter-spacing: 3px;
}
// 站点子标题
.site-subtitle{
    margin: 0px;
    font-size: 26px;
    letter-spacing: 1px;
    padding-bottom: 3px;
    color: #2e405b;
}

// 菜单
.menu {
    text-align: center;
    margin-top: 0px;
    margin-bottom: 0px;
    padding: 5px;
    border-radius: 0.3rem;
    //box-shadow: 0px 10px 10px 0px #2e405b;
}
// 菜单超链接字体大小
.menu .menu-item a {
    font-size: 14px;
}
// 菜单各项边距
.menu .menu-item {
    margin: 5px 15px;
}
// 菜单超链接样式
.menu .menu-item a:hover {
    border-bottom-color: rgba(161, 102, 171, 0);
}
.menu a {
    background-color: rgba(0, 0, 0, 0);
    color: #2e405b;
}

// 修改按键（button）样式
.btn {
    color: #008086;
    background: #fff;
    border: 2px solid #008086;
}
// 按键（button）点击时样式
.btn:hover {
  border-color: #008086;
  color: #fff;
  background: #008086;
}

// 修改选中字符的颜色
/* webkit, opera, IE9 */
::selection {
    background: #008086;
    color: #f7f7f7;
}
/* firefox */
::-moz-selection {
    background: #008086;
    color: #f7f7f7;
}

// 删除线
del {
  color: #b35888;
  background: #fbf7f8;
  margin: 2px;
}

//页脚
.footer-inner {color: #ff7600;}

/* 去掉图片边框 */
.posts-expand .post-body img {
    border: none;
    padding: 0px;
}
.post-gallery .post-gallery-img img {
    padding: 3px;
}

// Custom styles
// 页面最顶部的横线
.headband {
    height: 1.5px;
    background-image: linear-gradient(90deg, #F79533 0%, #F37055 15%, #EF4E7B 30%, #A166AB 44%, #5073B8 58%, #1098AD 72%, #07B39B 86%, #6DBA82 100%);
}
// 页面顶部行高
.header {
    line-height: 1.5;
}

// 页面背景色
.container {
    background-color: #008086;
}

// 表格每一行鼠标经过时的颜色
table>tbody>tr {
    &:hover {
        background-color: #E0FFFF;
    }
}

// 表格的单元格
table td, table th {
    border-right: 1px solid #DEDDDD;
}

// 文章内链接文本样式
.post-body p a{
    color: #0593d3;
    border-bottom: none;
    border-bottom: 1px solid #0593d3;
    &:hover {
        color: #fc6423;
        border-bottom: none;
        border-bottom: 1px solid #fc6423;
    }
}

// 代码块 styles.
code {
    color: #ff7600;
    background: #fbf7f8;
    margin: 4px;
}

